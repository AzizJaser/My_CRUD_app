<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="002-insert-admin" author="abdulaziz" runOnChange="true">

        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM users WHERE username = 'admin'
                </sqlCheck>
            </not>
        </preConditions>

        <!-- Insert admin user -->
        <insert tableName="users">
            <column name="id" valueNumeric="1"/>
            <column name="username" value="admin"/>
            <column name="password" value="$2a$10$Luq8GMqkhsVtB0Q/y/NUGOTGviSLpvEd1DCTlwOAN6c4oF7k62com"/> <!-- admin123 -->
            <column name="email" value="admin@admin.com"/>
            <column name="first_name" value="Admin"/>
            <column name="last_name" value="User"/>
            <column name="age" valueNumeric="30"/>
            <column name="phone_number" value="+966512345678"/>
            <column name="status" value="ACTIVE"/>
        </insert>

        <!-- Insert admin role -->
        <insert tableName="user_roles">
            <column name="user_id" valueNumeric="1"/>
            <column name="role" value="ADMIN"/>
        </insert>

    </changeSet>

</databaseChangeLog>